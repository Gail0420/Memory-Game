<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RowStyle">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.2</item>
    </style>

    <style name="ImageStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:onClick">updateGame</item>
    </style>

    <style name="PbStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:onClick">selectedImage</item>
    </style>
    <style name="BtnStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="sbRank">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.4</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">#BFFFFEFE</item>
        <item name="android:fontFamily">serif-monospace</item>
    </style>
    <style name="sbName">
        <item name="android:textSize">15sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">190dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.3</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#BFFFFEFE</item>
        <item name="android:fontFamily">serif-monospace</item>
    </style>
    <style name="sbScore">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.4</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#BFFFFEFE</item>
        <item name="android:fontFamily">serif-monospace</item>
    </style>


</resources>
